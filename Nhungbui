  <script>
    function createFlower(xPos, delay) {
      const flower = document.createElement("div");
      flower.className = "flower";
      flower.style.left = xPos + "px";
      flower.style.animationDelay = delay + "s";

      const stem = document.createElement("div");
      stem.className = "stem";
      flower.appendChild(stem);

      const leaf1 = document.createElement("div");
      leaf1.className = "leaf left";
      stem.appendChild(leaf1);

      const leaf2 = document.createElement("div");
      leaf2.className = "leaf right";
      stem.appendChild(leaf2);

      const flowerTop = document.createElement("div");
      flowerTop.className = "flower-top";
      flowerTop.style.position = "absolute";
      flowerTop.style.bottom = "150px";
      flowerTop.style.left = "50%";
      flowerTop.style.transform = "translateX(-50%)";

      for (let i = 0; i < 5; i++) {
        const petal = document.createElement("div");
        petal.className = "petal";
        flowerTop.appendChild(petal);
      }

      const center = document.createElement("div");
      center.className = "center";
      flowerTop.appendChild(center);

      flower.appendChild(flowerTop);
      document.body.appendChild(flower);
    }

    // T·∫°o nhi·ªÅu hoa m·ªçc ng·∫´u nhi√™n
    for (let i = 0; i < 8; i++) {
      const x = Math.random() * window.innerWidth;
      const d = Math.random() * 3;
      createFlower(x, d);
    }
  </script>
